<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <context-param>
        <param-name>contextLocation</param-name>
        <param-value>context.xml</param-value>
    </context-param>
    <context-param>
        <param-name>authenticationServiceName</param-name>
        <param-value>authenticationService</param-value>
    </context-param>
    <listener>
        <listener-class>net.sourceforge.safr.jaas.web.spring.ApplicationContextLoader</listener-class>
    </listener>
    <filter>
        <filter-name>form-login-filter</filter-name>
        <filter-class>net.sourceforge.safr.jaas.web.form.FormLoginFilter</filter-class>
        <init-param>
            <param-name>realm</param-name>
            <param-value>notebook</param-value>
        </init-param>
        <init-param>
            <param-name>logoutUrl</param-name>
            <param-value>/logout</param-value>
        </init-param>
        <init-param>
            <param-name>loginUrl</param-name>
            <param-value>/login.jsp</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>privileged-action-filter</filter-name>
        <filter-class>net.sourceforge.safr.jaas.web.PrivilegedActionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>form-login-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>privileged-action-filter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
